##:kivy 1.8.0

<Loginview>:
	status: result
	Label:
		text: "Contacts Manager"
		pos: 600, 600
		font_size: 40
	Label:
		text: "Username"
		pos: 450, 400
	Label:
		text: "Password"
		pos: 450, 300
	TextInput:
		multiline: False
		pos: 600, 425
		font_size: 20
		id: username
	TextInput:
		multiline: False
		pos: 600, 325
		password: True
		size: 200, 45
		font_size: 20
		id: password
	Button:
		text: "Login"
		size: 100, 50
		on_press: root: validate(self, username, password)
	Label:
		text: ""
		pos: 600, 100
		id: result

<afterLogin>:
	Label:
		text: "Welcome"
